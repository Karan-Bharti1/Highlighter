{
  "manifest_version": 3,
  "name": "Cactro Highlighter",
  "version": "1.0",
  "description": "Highlight text and save it with React + Vite + Tailwind",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "vite.svg",
      "48": "vite.svg",
      "128": "vite.svg"
    }
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
